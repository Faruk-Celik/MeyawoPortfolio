@model List<MeyawoPortfolio.Models.TblService>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Service list</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Service Title</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-success">Update</a></td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Delete</a></td>

        </tr>
    }
</table>
<a href="/Service/CreateService/" class="btn btn-primary">Add New Service</a>
