@model List<MeyawoPortfolio.Models.TblSocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Social media</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Social Media</th>
        <th>Social Media Link</th>       
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SocialMediaID</td>
            <td>@item.Title</td>
            <td>@item.SocialMediaUrl</td>         
            <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-success"> Update</a></td>
            <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger"> Delete</a></td>
            
        </tr>

    }
</table>
<td><a href="/SocialMedia/CreateSocialMedia/" class="btn btn-primary "> Add New Social Media</a></td>

